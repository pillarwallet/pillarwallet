default_platform(:ios)

platform :ios do

  before_all do
    setup_circle_ci
  end

  desc "Create a new beta build"
  lane :build_simulator do
    match(type: "development",
          readonly: true)
    disable_automatic_code_signing(path: "pillar-wallet.xcodeproj")
    xcodebuild(
              workspace: "pillar-wallet.xcworkspace",
              scheme: "pillar-wallet",
              configuration: "Release",
              xcargs: "-sdk 'iphonesimulator11.3' -destination 'generic/platform=iOS Simulator'",
              export_method: "development",
              buildlog_path: "build.log"
    )
    zip(path: "/Users/distiller/Library/Developer/Xcode/DerivedData/pillar-wallet*/Build/Products/Release-iphonesimulator/pillar-wallet",
        output_path: "./build/pillar-wallet.app.zip"
      )
  end

  desc "Upload a new build to TestFlight"
  lane :build_test_flight do
    sh("/usr/libexec/PlistBuddy -c \"Set :CFBundleVersion $CIRCLE_BUILD_NUM\" \"../pillar-wallet/Supporting/Info.plist\"")
    match(type: "appstore",
          readonly: true)
    disable_automatic_code_signing(path: "pillar-wallet.xcodeproj")
    build_app(clean: true,
              workspace: "pillar-wallet.xcworkspace",
              scheme: "pillar-wallet",
              configuration: "Release",
              export_method: "app-store"
    )
    commit = last_git_commit
     upload_to_testflight(changelog: commit[:message],
     skip_waiting_for_build_processing: true
    )
  end
end
